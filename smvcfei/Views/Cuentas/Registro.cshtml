@model UsuarioViewModel
@{
    ViewData["Title"] = "Crear nuevo usuario";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>
@if ((bool)ViewData["creado"])
{
    <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width: 660px" role="alert">
        El usuario se ha creado con éxito.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="Registro">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mx-auto mt-3" style="max-width: 500px;">
        <div class="card-header">
            Datos de usuario
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control">
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Rol" class="form-label"></label>
                <select asp-for="Rol" asp-items='(SelectList)ViewData["RolesSelect"]' class="form-select">
                    <option value="">Seleccione un valor para este campo</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Crear usuario</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}